<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="LoadTestConsole" class="org.apache.log4j.ConsoleAppender">
        <param name="threshold" value="DEBUG"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{dd-MM-yy HH:mm:ss,SSS}|%5.5p|%m%n"/>
        </layout>
    </appender>
    
    <category name="com.lightstreamer.load_test.adapter.AdapterSimulator" class="org.apache.log4j.Logger">
        <priority value="INFO"/>
        <appender-ref ref="LoadTestConsole"/>
    </category> 
    
    <category name="com.lightstreamer.load_test.simulator.FeedSimulator" class="org.apache.log4j.Logger">
        <priority value="INFO"/>
        <appender-ref ref="LoadTestConsole"/>
    </category> 
    
    <!-- Logs of configuration parameters. -->
    <category name="com.lightstreamer.load_test.configuration" class="org.apache.log4j.Logger">
        <priority value="INFO"/>
        <appender-ref ref="LoadTestConsole"/>
    </category> 
    
    <!-- This category is only used when the FeedSimulator is launched as a standalone program (i.e. not as a Lightstreamer adapter).
         At TRACE level logs all the events generated by the Feed Simulator. 
         If on startup this category is configured to not log TRACE events, then changing it to TRACE at runtime has no effect. -->
    <category name="com.lightstreamer.load_test.standalone_simulator.FeedSimulatorTest" class="org.apache.log4j.Logger">
        <priority value="INFO"/>
        <appender-ref ref="LoadTestConsole"/>
    </category>
    
</log4j:configuration>